@using u21512338_HW05.Models;
@model List<Borrow>

@{
    ViewBag.Title = "BookDetails";
}

@{
    var bookName = " ";
}

@foreach (Borrow borrowRecord in Model)
{

    bookName = borrowRecord.bookName;

}

@if (@Model.Count() == 0)
{
    <p>No Borrow History</p>
}
else
{

    <div>
        <h2>@bookName - <i style="color:forestgreen">Available</i></h2>
        <h3># Borrows - @Model.Count()  <span style="direction:rtl">@Html.ActionLink("View Students", "StudentDetails", "Home", new { @class = "btn btn-primary" })</span></h3>
    </div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Taken Date</th>
                <th scope="col">Brought Date</th>
                <th scope="col">Borrowed By</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Borrow borrowRecord in Model)
            {
                <tr>
                    <td>@borrowRecord.borrowID</td>
                    <td>@borrowRecord.takenDate</td>
                    <td>@borrowRecord.broughtDate</td>
                    <td>@borrowRecord.studentName</td>
                </tr>

            }
        </tbody>
    </table>

}
